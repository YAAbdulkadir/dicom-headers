{
  "name": "dicom-headers",
  "version": "0.2.1",
  "private": true,
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.yasin.dicomheaders",
    "productName": "DICOM Headers",
    "fileAssociations": [
      {
        "ext": [
          "dcm",
          "dicom",
          "ima"
        ],
        "name": "DICOM file",
        "mimeType": "application/dicom",
        "role": "Viewer"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist:win": "npm run build:renderer && npm run build:electron && electron-builder --win",
    "dist:linux": "npm run build:renderer && npm run build:electron && electron-builder --linux",
    "dist": "npm run build:renderer && npm run build:electron && electron-builder -mwl"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "dicom-parser": "^1.8.21",
    "dicom-data-dictionary": "^0.3.1"
  }
}